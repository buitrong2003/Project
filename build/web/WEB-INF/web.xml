    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/completed</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ControllerBook</servlet-name>
        <servlet-class>controller.hompage.ControllerBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCategory</servlet-name>
        <servlet-class>controller.hompage.ControllerCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerDetails</servlet-name>
        <servlet-class>controller.hompage.ControllerDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCart</servlet-name>
        <servlet-class>controller.hompage.ControllerCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSignIn</servlet-name>
        <servlet-class>controller.authen.ControllerSignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSignUp</servlet-name>
        <servlet-class>controller.authen.ControllerSignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerDashboard</servlet-name>
        <servlet-class>controller.admin.ControllerDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductAdminServlet</servlet-name>
        <servlet-class>controller.admin.ProductAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessCart</servlet-name>
        <servlet-class>controller.hompage.ProcessCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryAdminServlet</servlet-name>
        <servlet-class>controller.admin.CategoryAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdminServlet</servlet-name>
        <servlet-class>controller.admin.UserAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerContact</servlet-name>
        <servlet-class>controller.hompage.ControllerContact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProfile</servlet-name>
        <servlet-class>controller.hompage.ControllerProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCheckOut</servlet-name>
        <servlet-class>controller.hompage.ControllerCheckOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerChart</servlet-name>
        <servlet-class>controller.admin.ControllerChart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCompletedOrder</servlet-name>
        <servlet-class>controller.hompage.ControllerCompletedOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderAdminServlet</servlet-name>
        <servlet-class>controller.admin.OrderAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerBook</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCategory</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerDetails</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSignIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
