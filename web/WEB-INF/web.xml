<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>RoleAdmin</filter-name>
        <filter-class>filter.RoleAdmin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleAdmin</filter-name>
        <url-pattern>/home</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleAdmin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ControllerBook</servlet-name>
        <servlet-class>controller.hompage.ControllerBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCategory</servlet-name>
        <servlet-class>controller.hompage.ControllerCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerDetails</servlet-name>
        <servlet-class>controller.hompage.ControllerDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCart</servlet-name>
        <servlet-class>controller.hompage.ControllerCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSignIn</servlet-name>
        <servlet-class>controller.user.ControllerSignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSignUp</servlet-name>
        <servlet-class>controller.user.ControllerSignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerDashboard</servlet-name>
        <servlet-class>controller.admin.ControllerDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductAdminServlet</servlet-name>
        <servlet-class>controller.admin.ProductAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessCart</servlet-name>
        <servlet-class>controller.hompage.ProcessCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerBook</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCategory</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerDetails</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSignIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSignUp</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerDashboard</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductAdminServlet</servlet-name>
        <url-pattern>/admin/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessCart</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
</web-app>
